<!DOCTYPE html>
<html>
<head>
  <title>Stockapp</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>

<body>


    <%= form_tag(stocks_path, :method => "get", class: "form-search", id: "search-form") do %>
	    <div class="input-append">
	      <%= text_field_tag :search, params[:search], class: "span2", placeholder: "Search for Stocks" %>
	      <!-- In order to have the "search" icon int the button, we need to use plain HTML instead 
	           of using a Rails form helper -->
	      <button class="btn btn-info btn-sm" type="submit"><i class="glyphicon glyphicon-search"></i></button>
	    </div>
	  <% end %>
	  <%= yield %>

</body>
</html>


